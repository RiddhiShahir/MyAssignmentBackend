{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"

  ,
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=UserAuthLoginDb;Username=postgres;Password=1234"
  },
  
   "JwtSettings": {
    "Key": "REPLACE_WITH_A_VERY_LONG_SECRET_KEY",
    "Issuer": "AuthApi",
    "Audience": "AuthApiClient",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "OtpSettings": {
    "OtpExpiryMinutes": 5,
    "MaxOtpPerHour": 5
  },
  "Smtp": {
    "Host": "smtp.example.com",
    "Port": 587,
    "User": "smtp-user",
    "Pass": "smtp-pass",
    "From": "no-reply@example.com"
  },
  "Twilio": {
    "AccountSid": "TWILIO_SID",
    "AuthToken": "TWILIO_TOKEN",
    "FromNumber": "+1234567890"
  }

}
